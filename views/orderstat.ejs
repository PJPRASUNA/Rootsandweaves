                    <tr align="center" class="ft1"  style="height: 47px;" >
                            
                        <th style="color:white;" ><b>Product Name</b></th>
                        <th style="color:white"><b>Quantity</b></th>
                        <th style="color:white"><b>Retailer Name</b></th>
                        <th style="color:white"><b>Status</b></th>
                    </tr>
                    <% rejj.forEach(function(rejj) { %>
                        <tr style="font-weight: bold;background-color: #f2ede6; color: black;">
                        <th><%=rejj.prodName%></th>
                        <th><%=rejj.quantit%></th>
                        <th><%=rejj.retName%></th>
                        <th>Rejected</th>
                        </tr>
                    <% }); %>
                <%}%>
            
        </table>
    </div>
    </center>
            <h1 style="font-family: 'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif;font-size: 40px;">Pending Orders</h1>
            <center  style="width:95%">
                <div class="ft2" align="center">
                    <!-- <hr style="border:solid 1px;" > -->
                    <!-- <div class="tasks"> -->
                    <table class="table" align="center">
                        
                        
                <% if(pend.length==0){%>
                    
                    <h3 align="center">No Orders</h3>
                <%}%>
                <% if(pend.length!=0){%>
                    <tr align="center" class="ft1"  style="height: 47px;" >
                            
                        <th style="color:white;" ><b>Product Name</b></th>
                        <th style="color:white"><b>Quantity</b></th>
                        <th style="color:white"><b>Retailer Name</b></th>
                        <th style="color:white"><b>Status</b></th>
                    </tr>
                    <% pend.forEach(function(pend) { %>
                        <tr style="font-weight: bold;background-color: #f2ede6; color: black;">
                        <th><%=pend.prodName%></th>
                        <th><%=pend.quantit%></th>
                        <th><%=pend.retName%></th>
                        <th>pending</th>
                        </tr>
                    <% }); %>
                <%}%>

            </div>
        </table>
    </div>
    </center>
