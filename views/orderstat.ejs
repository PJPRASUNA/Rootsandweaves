<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">  
    <link rel ="stylesheet" href="bootstrap.min.css">
<title>Document</title>
    <style>
        body{
            display: flex;
            align-items: center;
            justify-content: center;
            flex-direction: column;
            background-size: cover;
            
            margin: 20px;
            border-radius: 20px;
            background-color: rgb(197, 193, 193)
            
        }
        #tableName{
            display: grid;
            align-items: center;
            justify-content: center;
            flex-direction: column;
             /* width:90%;  */
            background-color: cornsilk;
        }
        .tasks{
            /* width:100%; */
            display: grid;
            word-break: keep-all;
            grid-template-columns: 1fr 1fr 1fr 1fr;
            border:solid 1px black;
            padding-top: 10px;
            padding-bottom: 10px;
            align-items: center;
            /* padding-left: 20px;
            padding-right: 20px; */
            flex-direction: row;
            justify-content: space-evenly;
        }
    .prods{
        width:100%; 
        display: flex;
        word-break: keep-all;
        flex-direction: row;
        padding-top: 10px;
        padding-bottom: 10px;
        justify-content:space-evenly; 
        background-color: green;
        color: white;
    }
    .btn{
        background-color:green;
        border: #3fd557;
        color: white;
    }
    button{
        border-radius: 25px;
        width:130px; 
        height:40px;
    }
    .one{
        display: grid;
        grid-template-areas: 
        'fdw fdm';
    }
    .fdw{
        grid-area: fdw;
        padding: 50px;
    }
    .fdm{
        grid-area: fdm;
        padding: 50px;
    }
    input::placeholder {
                 /* Firefox, Chrome, Opera */
                 text-align: center;
    }
    /* table.table { width: 100%; } */

.table th, .table td { 
  text-align: left; 
  padding: 0.25em;
}

.table tr { 
  border-bottom: 1px solid #DDD;
}
.ft1{
    background-color:black;
    color:white;
    /* padding-top: 3px;
    padding-bottom: 3px; */
    border: solid black;
    border-radius: 8px;
}
th{
    color:black;

}
.ft2{
    width: 80%;
    /* display: flex;
    justify-content: space-around;
    align-items: center; */
}
.table{
    align-content: center;
    margin-left: auto;
    margin-right: auto;
    border: solid black;
    border-radius: 10px;
}

    </style>
</head>
<body>
    <h1 style="font-family:'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif">Accepted Orders</h1>
    <center  style="width:95%">
        <div class="ft2" align="center">
            <!-- <hr style="border:solid 1px;" > -->
            <!-- <div class="tasks"> -->
            <table class="table" align="center">
                
               
                <!-- </div> -->
    
        <% if(accc.length==0){%>
            <h5 align="center">(No orders have been accepted.)</h5><br>
        <%}%>
        <div>

        <% if(accc.length!=0){%>
            <tr align="center" class="ft1"  style="height: 47px;" >
                    
                <th style="color:white;" ><b>Product Name</b></th>
                <th style="color:white"><b>Quantity</b></th>
                <th style="color:white"><b>Retailer Name</b></th>
                <th style="color:white"><b>Status</b></th>
            </tr>
            <% accc.forEach(function(accc) { %>
                <tr style="font-weight: bold;background-color: #f2ede6; color: black;">
                <th><%=accc.prodName%></th>
                <th><%=accc.quantit%></th>
                <th><%=accc.retName%></th>
                <th>Accepted</th>
                </tr>
            <% }); %>
        <%}%>
    </table>
</div>
</center>
            <br>

            <h1 style="font-family: 'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif;">Rejected Orders</h1>
            <center  style="width:95%">
                <div class="ft2" align="center">
                    <!-- <hr style="border:solid 1px;" > -->
                    <!-- <div class="tasks"> -->
                    <table class="table" align="center">
                        
                        
                <% if(rejj.length==0){%>
